<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView android:id="@+id/textHelpTitle" android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/help_title" android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
<TextView android:layout_height="wrap_content" android:gravity="right" android:id="@+id/textVersionName" android:text="Ver 0.0.0" android:layout_width="fill_parent"></TextView>
<TextView
    android:id="@+id/textHelpText"
    android:layout_width="fill_parent"
    android:text="@string/help_text"
    android:layout_height="wrap_content" android:layout_marginTop="10dip"/>
</LinearLayout>
